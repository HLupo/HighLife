generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model UserTag {
  id    String @id @default(cuid())
  name  String @unique
  tasks Task[]

  @@index([name])
}

model Task {
  id              String    @id @default(cuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  endAt           DateTime?
  minutesRequired Int?
  title           String
  description     String?
  createdBy       String
  done            Boolean   @default(false)
  priority        Int       @default(0)
  tags            UserTag[]

  @@index([createdBy])
}

model TaskToUserTag {
  A String
  B String

  @@unique([A, B], map: "_TaskToUserTag_AB_unique")
  @@index([B], map: "_TaskToUserTag_B_index")
  @@map("_TaskToUserTag")
}
